<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="usuario" class="me.victorhernandez.hellospring.model.Usuario">
		<property name="nombre" value="Victor Hernandez"></property>
		<property name="direccion" value="Res La Gloria"></property>
		<property name="email" value="mail@victorhernandez.me"></property>

	</bean>
	<bean name="implUserDao" class="me.victorhernandez.hellospring.dao.ImpUserDao">
		<property name="usuarios">
			<list>
				<ref bean="usuario1" />
				<ref bean="usuario2" />
				<ref bean="usuario3" />
			</list>
		</property>
	</bean>
	<bean name="usuario1" class="me.victorhernandez.hellospring.model.Usuario">
		<property name="id" value="1" />
		<property name="nombre" value="Eduardo Colindres" />
		<property name="password" value="12345" />
		<property name="email" value="eduardo.colindres@gmail.com" />
		<property name="birthdate">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="1978-10-04" />
			</bean>
		</property>
	</bean>
	<bean name="usuario2" class="me.victorhernandez.hellospring.model.Usuario">
		<property name="id" value="1" />
		<property name="nombre" value="Eduardo Colindres" />
		<property name="password" value="12345" />
		<property name="email" value="eduardo.colindres@gmail.com" />
		<property name="birthdate">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="1978-10-04" />
			</bean>
		</property>
	</bean>
	<bean name="usuario3" class="me.victorhernandez.hellospring.model.Usuario">
		<property name="id" value="1" />
		<property name="nombre" value="Eduardo Colindres" />
		<property name="password" value="12345" />
		<property name="email" value="eduardo.colindres@gmail.com" />
		<property name="birthdate">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="1978-10-04" />
			</bean>
		</property>
	</bean>
	<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>
</beans>