<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
	<!-- this is useful for development purpouses -->
	<constant name="struts.devMod" value="true" />
	<!-- The next constant allow us to modify the struts conf file and automatic reloadit -->
	<constant name="struts.configuration.xml.reload" value="true"/>
	
	<!-- Deining the packages -->
	<package name="primer-struts" extends="struts-default">
		<action name="index">
			<result name="success">/index.jsp</result>
		</action>
	</package>
</struts>