<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
	<!-- this is useful for development porpouses -->
	<constant name="struts.devMod" value="true" />
	<!-- The next constant allow us to modify the struts conf file and automatic reloadit -->
	<constant name="struts.configuration.xml.reload" value="true"/>
	
	<!-- Defining the packages -->
	<package name="primer-struts" extends="struts-default">
		<action name="index">
			<result name="success">/index.jsp</result>
		</action>
		<action name="greatings" class="me.victorhernandez.struts2.pra.actions.GreetingAction">
			<result name="success">/greetings.jsp</result>
		</action>
		<action name="userGreeting" class="me.victorhernandez.struts2.pra.actions.UserGreetingAction">
			<result name="success">/saludoTerricola.jsp</result>
		</action>
	</package>
	<package name="app" extends="primer-struts">
		<action name="allProducts" class="registeredProductsAction">
			<result name="success">/allRegistered.jsp</result>
		</action>
		<action name="searchProducts" class="searchProductAction">
			<result name="success">/searchProducts.jsp</result>
		</action>
		<action name="addNewProduct" class="productAction">
			<result name="success" type="redirect">allProducts</result>
			<result name="error">/errorPage.jsp</result>
		</action>
		<action name="modifyProduct" class="modDelProduct">
			<result name="success">/newProduct.jsp</result>
		</action>
		<action name="saveModifiedProduct" class="productAction" method="modify">
			<result name="success" type="redirect">allProducts</result>
		</action>
		<action name="deleteProduct" class="productAction" method="delete">
			<result name="success" type="redirect">allProducts</result>
		</action>
	</package>
</struts>